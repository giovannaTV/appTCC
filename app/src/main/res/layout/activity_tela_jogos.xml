<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    tools:context=".telaJogos">

    <Button
        android:id="@+id/buttonJogoMemoria"
        android:layout_width="294dp"
        android:layout_height="78dp"
        android:layout_marginTop="64dp"
        android:text="Jogo da Memória"
        android:textColor="#281D16"
        android:textSize="20sp"
        app:backgroundTint="#359830"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonJogoAdivinharPalavras"
        android:layout_width="294dp"
        android:layout_height="78dp"
        android:layout_marginBottom="100dp"
        android:text="JOGO DE ENCONTRAR AS PALAVRAS"
        android:textColor="#281D16"
        android:textSize="20sp"
        app:backgroundTint="#359830"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonJogoMemoria"
        app:layout_constraintVertical_bias="0.392" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="238dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Aqui, você deve escolher qual jogo deseja jogar. Para isso, selecione o botão com a opção que deseja. Os jogos disponíveis são:"
        android:textAllCaps="true"
        android:textColor="#020202"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>